#:kivy 1.9.1
#:import GameWindow cliffs.game.GameWindow

<CliffsScreenManager>:
    Screen:
        name: 'menu'
        BoxLayout:
            orientation: 'vertical'
            padding: '20sp'

            Button:
                text: 'Game'
                on_press:
                    root.transition.direction = 'down'
                    root.current = 'game'

            Button:
                text: 'Help'
                on_press:
                    root.transition.direction = 'left'
                    root.current = 'help'

            Button:
                text: 'Quit'
                on_press:
                    app.stop()

    Screen:
        name: 'game'
        on_enter: win_game.enter()
        on_pre_leave: win_game.leave()
        GameWindow:
            id: win_game

    Screen:
        name: 'help'
        DocView:
            filename: 'help.txt'

